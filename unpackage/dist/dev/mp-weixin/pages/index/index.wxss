
.index-swiper {
		overflow: hidden;
		margin: 20rpx 20rpx 0;
}
.index-swiper swiper {
		overflow: hidden;
		height: 320rpx;
		border-radius: 10rpx;
}
.index-swiper swiper-item image {
		width: 100%;
		height: 100%;
}
.nav2-list {
		margin: 10rpx 20rpx 0 20rpx;
}
.nav2-list::after {
		content: '';
		display: block;
		height: 0;
		line-height: 0;
		clear: both;
		visibility: hidden;
}
.nav2-item {
		float: left;
		margin-top: 20rpx;
		width: 50%;
		text-align: center;
		box-sizing: border-box;
		padding: 0 5rpx;
}
.nav2-pic {
		width: 100%;
}
.nav2-pic image {
		display: block;
		width: 100%;
}
